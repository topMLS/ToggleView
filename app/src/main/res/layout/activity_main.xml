<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:toggle="http://schemas.android.com/apk/res/com.example.malusong.toggleview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.malusong.toggleview.MainActivity">

    <com.example.malusong.toggleview.ToggleView
        android:id="@+id/tv_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        toggle:switch_background="@drawable/switch_background"
        toggle:slide_button="@drawable/slide_button"
        toggle:switch_state="false"
        android:layout_centerInParent="true"
       />

</RelativeLayout>
